# =========================
# App / Go server
# =========================
PORT=8081
DB_DSN=postgres://user:password@postgres/mydb?sslmode=disable
JWT_SECRET=supersecretjwtkey
CORS_TRUSTED_ORIGINS=http://localhost:8080

# =========================
# SMTP / Mailpit
# =========================
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_FROM=noreply@example.com

# =========================
# Rate limiting (optional)
# =========================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# =========================
# Metrics / Debug (optional)
# =========================
METRICS_ENABLED=true
GO_ENV=development
LOG_LEVEL=debug

# =========================
# Password reset / email
# =========================
EMAIL_RESET_URL=http://localhost:8080/reset-password?token=
EMAIL_VERIFICATION_URL=http://localhost:8080/verify-email?token=